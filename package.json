{
    "private": true,
    "name": "shopify-demo-app-node-react",
    "version": "1.0.0",
    "main": "dist/index.js",
    "engines": {
        "node": ">=12",
        "npm": "^6.14.6",
        "yarn": "^1.22.4"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "jsxSingleQuote": false,
        "trailingComma": "all",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "proseWrap": "preserve",
        "endOfLine": "lf"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": "eslint --cache --fix"
    },
    "scripts": {
        "downloadSchema": "./downloadShopifyGraphqlSchema.js",
        "test": "jest",
        "dev": "nodemon",
        "build": "next build && tsc --project tsconfig.server.json",
        "start": "node dist/index.js",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lintFix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "clean": "del-cli .next dist",
        "full-clean": "yarn clean && del-cli node_modules",
        "startNgrok": "ngrok start permaculture -region=eu"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mr-perseus/permaculture.git"
    },
    "dependencies": {
        "@apollo/react-common": "^3.1.4",
        "@nano-sql/core": "2.3.7",
        "@shopify/app-bridge": "1.27.2",
        "@shopify/app-bridge-react": "1.27.2",
        "@shopify/argo-admin-react": "0.7.6",
        "@shopify/koa-shopify-auth": "3.1.72",
        "@shopify/koa-shopify-graphql-proxy": "4.0.4",
        "@shopify/koa-shopify-webhooks": "2.5.2",
        "@shopify/polaris": "5.9.1",
        "@zeit/next-css": "1.0.1",
        "apollo-boost": "0.4.9",
        "apollo-cache": "1.3.5",
        "apollo-client": "2.6.10",
        "apollo-link": "1.2.14",
        "apollo-utilities": "1.3.4",
        "cors": "^2.8.5",
        "dotenv": "8.2.0",
        "graphql": "14.7.0",
        "graphql-tag": "2.11.0",
        "isomorphic-fetch": "3.0.0",
        "js-cookie": "2.2.1",
        "jwt-decode": "^3.1.2",
        "koa": "2.13.0",
        "koa-cors": "^0.0.16",
        "koa-logger": "^3.2.1",
        "koa-router": "9.4.0",
        "koa-session": "6.1.0",
        "next": "9.5.5",
        "pg": "^8.5.1",
        "react": "16.14.0",
        "react-apollo": "3.1.5",
        "react-dom": "16.14.0",
        "sequelize": "^6.3.5",
        "sqlite3": "^5.0.0",
        "store-js": "2.0.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.8",
        "@types/jest": "26.0.15",
        "@types/js-cookie": "2.2.6",
        "@types/koa-cors": "^0.0.0",
        "@types/koa-logger": "^3.1.1",
        "@types/koa-router": "7.4.1",
        "@types/koa-session": "5.10.3",
        "@types/node": "12.19.2",
        "@types/react": "16.9.53",
        "@types/react-redux": "7.1.9",
        "@types/webpack": "4.41.23",
        "@typescript-eslint/eslint-plugin": "4.6.0",
        "@typescript-eslint/parser": "4.6.0",
        "del-cli": "3.0.1",
        "eslint": "7.12.1",
        "eslint-config-airbnb-typescript": "12.0.0",
        "eslint-config-prettier": "6.14.0",
        "eslint-import-resolver-typescript": "2.3.0",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jest": "24.1.0",
        "eslint-plugin-jsx-a11y": "6.4.1",
        "eslint-plugin-no-secrets": "0.6.8",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-promise": "4.2.1",
        "eslint-plugin-react": "7.21.5",
        "eslint-plugin-react-hooks": "4.2.0",
        "eslint-plugin-security": "1.4.0",
        "husky": "4.3.0",
        "jest": "26.6.1",
        "lint-staged": "10.5.0",
        "ngrok": "3.3.0",
        "nodemon": "^2.0.6",
        "prettier": "2.1.2",
        "ts-jest": "26.4.3",
        "ts-node": "9.0.0",
        "typescript": "4.0.5",
        "webpack": "4.44.2"
    }
}
