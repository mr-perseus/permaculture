{
    "private": true,
    "workspaces": [
        "server",
        "client"
    ],
    "engines": {
        "node": "^12.8.4",
        "npm": "^6.14.6",
        "yarn": "^1.22.4"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "jsxSingleQuote": false,
        "trailingComma": "all",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "proseWrap": "preserve",
        "endOfLine": "lf"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": "eslint --cache --fix"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "dev": "yarn workspace permaculture-server nodemon",
        "build": "yarn workspace permaculture-client next build && yarn workspace permaculture-server tsc --project tsconfig.json",
        "start": "yarn workspace permaculture-server cross-env NODE_ENV=production node dist/index.js",
        "ngrok": "ngrok http 3000",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lintFix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "clean": "del-cli .next client/.next server/dist",
        "full-clean": "yarn clean && del-cli server/node_modules client/node_modules && del-cli node_modules",
        "startNgrok": "ngrok start permaculture -region=eu"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mr-perseus/permaculture.git"
    },
    "devDependencies": {
        "@types/node": "14.11.5",
        "@typescript-eslint/eslint-plugin": "4.4.0",
        "@typescript-eslint/parser": "4.4.0",
        "cross-env": "7.0.2",
        "del-cli": "3.0.1",
        "eslint": "7.10.0",
        "eslint-config-airbnb-typescript": "11.0.0",
        "eslint-config-prettier": "6.12.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jsx-a11y": "6.3.1",
        "eslint-plugin-no-secrets": "0.6.8",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-react": "7.21.3",
        "eslint-plugin-react-hooks": "4.1.2",
        "eslint-plugin-security": "1.4.0",
        "husky": "4.3.0",
        "lint-staged": "10.4.0",
        "ngrok": "3.3.0",
        "nodemon": "2.0.4",
        "prettier": "2.1.2",
        "ts-node": "9.0.0",
        "typescript": "4.0.3"
    }
}
